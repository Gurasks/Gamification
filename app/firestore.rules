rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSessionOwner() {
      return request.auth.uid == resource.data.owner;
    }

    function isSessionMember() {
      return isSignedIn() && request.auth.uid in resource.data.members;
    }

    function isCardOwner() {
      return request.auth.uid == resource.data.createdById;
    }

    function hasValidUserStructure() {
      return request.resource.data.keys().hasAll(['uid', 'displayName']) &&
      request.resource.data.uid is string &&
      request.resource.data.displayName is string &&
      request.resource.data.displayName.size() >= 1 &&
      request.resource.data.displayName.size() <= 50;
    }

    function hasValidSessionStructure() {
      return request.resource.data.keys().hasAll(['title', 'owner', 'members', 'numOfTeams']) &&
      request.resource.data.title is string &&
      request.resource.data.title.size() >= 3 &&
      request.resource.data.title.size() <= 100 &&
      request.resource.data.owner is string &&
      request.resource.data.members is list &&
      request.resource.data.numOfTeams is number;
    }

    function isValidAuthProvider() {
      return request.auth != null;
    }

    // ===== REGRAS PRINCIPAIS =====

    // Sessions (salas/sessões)
    match /sessions/{sessionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasValidSessionStructure();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && isSessionOwner();
    }

    // Cards (cartões de refinamento)
    match /cards/{cardId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && isCardOwner();

      // Validação opcional para novos campos
      function isValidMetadata() {
        return (
        // Prioridade deve ser um dos valores permitidos
        (!request.resource.data.keys().hasAny(['priority']) ||
        request.resource.data.priority in ['baixa', 'media', 'alta', 'critica']) &&

        // Tipo de requisito deve ser um dos valores permitidos
        (!request.resource.data.keys().hasAny(['requirementType']) ||
        request.resource.data.requirementType in ['funcional', 'nao-funcional', 'tecnico', 'design', 'outro']) &&

        // Categoria deve ser um dos valores permitidos
        (!request.resource.data.keys().hasAny(['category']) ||
        request.resource.data.category in ['melhoria', 'bug', 'feature', 'documentacao', 'pergunta', 'feedback']) &&

        // Esforço estimado deve ser número positivo
        (!request.resource.data.keys().hasAny(['estimatedEffort']) ||
        request.resource.data.estimatedEffort is number &&
        request.resource.data.estimatedEffort >= 0) &&

        // Tags devem ser array de strings
        (!request.resource.data.keys().hasAny(['tags']) ||
        request.resource.data.tags is list &&
        request.resource.data.tags.size() <= 10) // Limite de 10 tags
        );
      }

      allow create: if isSignedIn() && isValidMetadata();
      allow update: if isSignedIn() && isValidMetadata();
    }

    // Perfis de usuário
    match /users/{userId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && hasValidUserStructure();
      allow delete: if isSignedIn() && isOwner(userId);
    }

    // Timers (temporizadores)
    match /timers/{timerId} {
      allow read, write: if isSignedIn();
    }

    // Mapeamento de UUIDs curtos
    match /uuidMappings/{mappingId} {
      allow read, write: if isSignedIn();
    }

    // Comentários (se usar subcollection)
    match /cards/{cardId}/comments/{commentId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.createdById;
    }
  }
}